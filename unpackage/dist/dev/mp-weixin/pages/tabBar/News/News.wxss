page,
.content {
  background-color: #f8f8f8;
  height: 100%;
}
page,
.tabs {
  background-color: #f8f8f8;
  height: 100%;
}
page .scroll-h,
.tabs .scroll-h {
  width: 750rpx;
  height: 90rpx;
  white-space: nowrap;
  border-bottom: 2rpx solid #c0c0c0;
}
page .scroll-h .tab-items,
.tabs .scroll-h .tab-items {
  width: 200rpx;
  display: inline-block;
  margin: 10rpx 25rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  text-align: center;
  color: #808080;
  position: relative;
}
page .scroll-h .tab-items:after,
.tabs .scroll-h .tab-items:after {
  content: "";
  width: 0;
  height: 0;
  border-bottom: 4rpx solid #aa0000;
  position: absolute;
  left: 50%;
  bottom: -20rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  -webkit-transition: 0.3s;
  transition: 0.3s;
}
page .scroll-h .current,
.tabs .scroll-h .current {
  height: 61rpx;
  color: #ce1b1b;
}
page .scroll-h .current:after,
.tabs .scroll-h .current:after {
  width: 88rpx;
  height: 4rpx;
}
page .cont_area,
.tabs .cont_area {
  width: 725rpx;
  height: calc(100% - 70rpx);
  margin: 0 auto;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
page .cont_area .l_text,
.tabs .cont_area .l_text {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 32rpx;
  color: #333333;
  height: -webkit-fit-content;
  height: fit-content;
  border-bottom: 1rpx solid #c0c0c0;
}
page .cont_area .l_text .l-text,
.tabs .cont_area .l_text .l-text {
  margin-top: 31rpx;
  margin-left: 30rpx;
  margin-right: 49rpx;
  margin-bottom: 23rpx;
  letter-spacing: 3rpx;
  color: #333333;
}
page .cont_area .l_text .l-modify,
.tabs .cont_area .l_text .l-modify {
  margin-left: 30rpx;
